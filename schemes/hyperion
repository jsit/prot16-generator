# Colour values
dbg=0a2d3c # dark background
dhl=1a3d4c # dark highlight
dt2=8d9474 # dark bg text secondary
dt1=9ebcc8 # dark bg text primary
lbg=f6f6f6 # light background
lhl=e6e6e6 # light highlight
lt2=6a8ba9 # light bg text secondary
lt1=4d654e # light bg text primary
red=d94832 # red variant
ora=dc7d3a # orange variant
yel=dbac13 # yellow variant
gre=329c50 # green variant
cya=0eaac8 # cyan variant
blu=1d8fde # blue variant
vio=aa7deb # violet variant
mag=dc76aa # magenta variant

# Visual order used for colour mapping
p1=$gre # green
p2=$cya # cyan
p3=$blu # blue
s1=$mag # magenta
s2=$vio # violet
t1=$ora # orange
t2=$yel # yellow
t3=$red # red

# Terminal values follow this sequence
# 0=dbg; 1=red; 2=gre; 3=yel; 4=blu; 5=mag; 6=cya; 7=lhl;
# 8=dhl; 9=ora; 10=lt1; 11=dt2; 12=lt2; 13=vio; 14=dt1; 15=lbg.

# Terminal accent colours corresponding to the visual order
cp1=2
cp2=6
cp3=4
cs1=5
cs2=13
ct1=9
ct2=3
ct3=1

# Terminal colour codes
# corresponding to the palette
# followed by termcol description
cdbg=0      # black
cred=1      # red
cgre=2      # green
cyel=3      # yellow
cblu=4      # blue
cmag=5      # magenta
ccya=6      # cyan
clhl=7      # white
cdhl=8      # brblack
cora=9      # brred
clt1=10     # brgreen
cdt2=11     # bryellow
clt2=12     # brblue
cvio=13     # brmagenta
cdt1=14     # brcyan
clbg=15     # brwhite
