# Colour values
dbg=1f2a2d # dark background
dhl=2f3a3d # dark highlight
dt2=5f6a6d # dark bg text secondary
dt1=8f9a9d # dark bg text primary
lbg=eff1f3 # light background
lhl=dfe1e3 # light highlight
lt2=8f9193 # light bg text secondary
lt1=5f6163 # light bg text primary
red=974f6c # red variant
ora=9d7427 # orange variant
yel=9a8f0c # yellow variant
gre=5b935b # green variant
cya=52a6ad # cyan variant
blu=4d8ab3 # blue variant
vio=7e7ead # violet variant
mag=ad6e8f # magenta variant

# Visual order used for colour mapping
p1=$mag # magenta
p2=$vio # violet
p3=$blu # blue
s1=$cya # cyan
s2=$gre # green
t1=$red # red
t2=$ora # orange
t3=$yel # yellow

# Terminal values follow this sequence
# 0=dbg; 1=red; 2=gre; 3=yel; 4=blu; 5=mag; 6=cya; 7=lhl;
# 8=dhl; 9=ora; 10=lt1; 11=dt2; 12=lt2; 13=vio; 14=dt1; 15=lbg.

# Terminal accent colours corresponding to the visual order
cp1=5
cp2=13
cp3=4
cs1=6
cs2=2
ct1=1
ct2=9
ct3=3

# Terminal colour codes
# corresponding to the palette
# followed by termcol description
cdbg=0      # black
cred=1      # red
cgre=2      # green
cyel=3      # yellow
cblu=4      # blue
cmag=5      # magenta
ccya=6      # cyan
clhl=7      # white
cdhl=8      # brblack
cora=9      # brred
clt1=10     # brgreen
cdt2=11     # bryellow
clt2=12     # brblue
cvio=13     # brmagenta
cdt1=14     # brcyan
clbg=15     # brwhite
